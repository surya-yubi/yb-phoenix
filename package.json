{
  "name": "@yubi/phoenix",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^6.5.1"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "playgrounds/*"
  ],
  "nohoist": ["**/react-native", "**/react-native/**"],
  "private": true,
  "scripts": {
    "build": "yarn lerna run build",
