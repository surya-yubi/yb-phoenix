{
  "name": "@yubi/phoenix",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^6.5.1",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "playgrounds/*"
  ],
  "nohoist": ["**/react-native", "**/react-native/**"],
  "private": true,
  "scripts": {
    "build": "yarn lerna run build",
    "dev": "yarn lerna run dev",
    "dev:mobile": "yarn workspace @playgrounds/app-mobile dev",
    "dev:android": "yarn workspace @playgrounds/app-mobile android",
    "dev:ios": "yarn workspace @playgrounds/app-mobile ios",
    "dev:web": "yarn workspace @playgrounds/app-web dev",
    "dev:storybook:web": "yarn workspace @yubi/storybook-web storybook",
    "dev:storybook:mobile": "yarn workspace @yubi/storybook start",
    "publish": "yarn lerna publish",
    "commit": "yarn git-cz",
    "test:chromatic": "yarn lerna run test:chromatic",
    "build:storybook": "yarn build && yarn lerna run build-storybook"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
