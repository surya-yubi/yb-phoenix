{
  "name": "@yubi/button-example",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "react-native": "./src/index.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "dev": "tsup --watch --silent",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "jest",
    "build": "tsup --clean"
  },
  "devDependencies": {
    "@yubi/eslint-config": "*",
    "@tsconfig/react-native": "^2.0.3",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.28",
    "@types/react-native": "^0.71.3",
    "@types/react-test-renderer": "^18.0.0",
    "jest": "^29.4.3",
    "jest-expo": "^48.0.1",
    "react-test-renderer": "18.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-native": "^0.71.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "@yubi/eslint-config",
    "ignorePatterns": [
      "node_modules",
      "build",
      ".expo",
      ".expo-shared"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "build",
    "sourcemap": true,
    "dts": true,
    "external": [
      "react",
      "react-native",
      "react-native-web"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
